generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  name          String?
  email         String?       @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String        @default("USER") // SUPER_ADMIN, ADMIN, USER
  tenantId      String?
  tenant        Tenant?       @relation(fields: [tenantId], references: [id])
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  active        Boolean       @default(true)
  activityLogs  ActivityLog[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Tenant {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  plan      String   @default("FREE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Profile
  logo         String?
  address      String?
  city         String?
  state        String?
  zipCode      String?
  phone        String?
  email        String?
  document     String? // CNPJ or CPF
  status       String  @default("ACTIVE") // ACTIVE, SUSPENDED, BLOCKED
  primaryColor String? @default("#000000")

  stripeCustomerId String?

  planId  String?
  planRel Plan?   @relation(fields: [planId], references: [id])

  users          User[]
  products       Product[]
  customers      Customer[]
  orders         Order[]
  stockMovements StockMovement[]
  categories     Category[]
  integrations   Integration[]
  inventory      Inventory[]
  connections    TenantConnection[]
  listings       ProductListing[]
  subscriptions  Subscription[]
  invoices       Invoice[]

  @@map("tenants")
}

model Product {
  id          String    @id @default(cuid())
  tenantId    String
  tenant      Tenant    @relation(fields: [tenantId], references: [id])
  name        String
  description String?
  sku         String?
  price       Decimal   @default(0.00)
  costPrice   Decimal?
  imageUrl    String?
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  inventory      Inventory?
  orderItems     OrderItem[]
  stockMovements StockMovement[]
  listings       ProductListing[]

  @@index([tenantId])
  @@map("products")
}

model Inventory {
  id        String   @id @default(cuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  productId String   @unique
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int      @default(0)
  minStock  Int      @default(0)
  location  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId])
  @@map("inventory")
}

model StockMovement {
  id          String   @id @default(cuid())
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  productId   String
  product     Product  @relation(fields: [productId], references: [id])
  quantity    Int
  type        String // IN, OUT, ADJUSTMENT, SALE, RETURN
  reason      String?
  referenceId String?
  createdAt   DateTime @default(now())

  @@index([tenantId])
  @@index([productId])
  @@map("stock_movements")
}

model Category {
  id        String    @id @default(cuid())
  tenantId  String
  tenant    Tenant    @relation(fields: [tenantId], references: [id])
  name      String
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([tenantId])
  @@map("categories")
}

model Order {
  id            String      @id @default(cuid())
  tenantId      String
  tenant        Tenant      @relation(fields: [tenantId], references: [id])
  customerId    String?
  customer      Customer?   @relation(fields: [customerId], references: [id])
  total         Decimal     @default(0.00)
  status        String // PENDING, COMPLETED, CANCELED
  paymentStatus String      @default("PENDING") // PENDING, PAID, REFUNDED
  fee           Decimal     @default(0.00)
  notes         String?
  externalId    String?
  items         OrderItem[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@unique([tenantId, externalId])
  @@index([tenantId])
  @@map("orders")
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Decimal
  subtotal  Decimal

  @@map("order_items")
}

model Customer {
  id        String   @id @default(cuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id])
  name      String
  email     String?
  phone     String?
  document  String?
  address   String?
  city      String?
  state     String?
  zipCode   String?
  status    String   @default("ACTIVE")
  notes     String?
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tenantId])
  @@map("customers")
}

model Integration {
  id          String   @id @default(cuid())
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  type        String // WHATSAPP, MERCADO_LIVRE, OLX, SHOPEE
  apiKey      String?
  apiSecret   String?
  accessToken String?
  isActive    Boolean  @default(true)
  config      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([tenantId, type])
  @@map("integrations")
}

model IntegrationPlatform {
  id        String   @id @default(cuid())
  name      String // "Shopee", "Mercado Livre"
  slug      String   @unique // "shopee", "mercado-livre"
  appId     String?
  appSecret String?
  apiUrl    String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  connections TenantConnection[]

  @@map("integration_platforms")
}

model TenantConnection {
  id           String              @id @default(cuid())
  tenantId     String
  tenant       Tenant              @relation(fields: [tenantId], references: [id])
  platformId   String
  platform     IntegrationPlatform @relation(fields: [platformId], references: [id])
  accessToken  String?
  refreshToken String?
  expiresAt    DateTime?
  accountId    String? // External Account ID (e.g. Shopee Shop ID)
  settings     String? // JSON: price rules, sync modes
  isActive     Boolean             @default(true)
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt

  listings ProductListing[]
  logs     IntegrationLog[]

  @@unique([tenantId, platformId])
  @@map("tenant_connections")
}

model ProductListing {
  id           String           @id @default(cuid())
  tenantId     String
  tenant       Tenant           @relation(fields: [tenantId], references: [id])
  productId    String
  product      Product          @relation(fields: [productId], references: [id])
  connectionId String
  connection   TenantConnection @relation(fields: [connectionId], references: [id])
  externalId   String? // ID on the marketplace
  status       String // SYNCED, PENDING, ERROR, UNLINKED
  lastSync     DateTime?
  errorMessage String?
  url          String?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  @@unique([productId, connectionId])
  @@map("product_listings")
}

model IntegrationLog {
  id           String            @id @default(cuid())
  tenantId     String
  platformId   String?
  connectionId String?
  connection   TenantConnection? @relation(fields: [connectionId], references: [id])
  event        String // "PRODUCT_SYNC", "ORDER_IMPORT"
  status       String // SUCCESS, ERROR
  message      String?
  payload      String? // Request data
  response     String? // Response data
  createdAt    DateTime          @default(now())

  @@index([tenantId, createdAt])
  @@map("integration_logs")
}

model Plan {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  slug        String   @unique
  description String?
  price       Decimal  @default(0.00)

  // Limits
  maxProducts     Int @default(100)
  maxOrders       Int @default(50)
  maxUsers        Int @default(1)
  maxIntegrations Int @default(1)

  active Boolean @default(true)

  tenants Tenant[]

  @@map("plans")
}

model Subscription {
  id                   String    @id @default(cuid())
  tenantId             String
  tenant               Tenant    @relation(fields: [tenantId], references: [id])
  status               String // active, canceled, past_due
  planId               String?
  stripeId             String?
  stripeSubscriptionId String?   @unique
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean?  @default(false)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  invoices Invoice[]

  @@index([tenantId])
  @@map("subscriptions")
}

model Invoice {
  id              String        @id @default(cuid())
  tenantId        String
  tenant          Tenant        @relation(fields: [tenantId], references: [id])
  subscriptionId  String?
  subscription    Subscription? @relation(fields: [subscriptionId], references: [id])
  amount          Decimal
  status          String // PAID, OPEN, VOID
  stripeInvoiceId String?
  pdfUrl          String?
  paidAt          DateTime?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([tenantId])
  @@map("invoices")
}

model ActivityLog {
  id        String   @id @default(cuid())
  tenantId  String?
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  action    String
  entity    String
  entityId  String?
  details   String?
  metadata  String? // JSON
  status    String // SUCCESS, ERROR, WARNING
  createdAt DateTime @default(now())

  @@index([tenantId])
  @@index([userId])
  @@map("activity_logs")
}
